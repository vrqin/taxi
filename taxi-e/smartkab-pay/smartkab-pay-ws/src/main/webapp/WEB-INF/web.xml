<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="/2001/XMLSchema-instance" version="2.5"
         xmlns="/xml/ns/javaee"
         xsi:schemaLocation="/xml/ns/javaee
                       http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>Smart Kab Pay</display-name>
    <servlet>
        <servlet-name>Smart Kab Pay Application</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>com.speedtalk.smartkab.pay.ws.SmartKabPayApplication</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Smart Kab Pay Application</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
    <listener>
        <listener-class>com.speedtalk.smartkab.pay.ws.TaxiPayStartUpListener</listener-class>
    </listener>
</web-app>
